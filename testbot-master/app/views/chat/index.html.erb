    <!--450-->
    <div class="main"  style="width:100%; height:446px; overflow-y:scroll; overflow-x:hidden;">
       
    
            <table class="chat" width="100%" border="0" cellspacing="0" cellpadding="0">
        
            <% Chat.all.each do |c| %>
            <%if c.is_man==true%>
            
            <tr>
            <td>
            <img src="/assets/man.png" height="30" width="30" align="center">
            <p class="balloon"><%=c.content%></p>
            </td>
            </tr>
            <%else%>
            
            <tr align="right">
            <td align="right">
            <p class="balloon" ><%=c.content%></p>
            <img src="/assets/com.ico" height="30" width="30" align="center">
            </td>
            </tr>
            <%end%>
            
            <%end%>
            
        </table>
    </div>
    
    <!--</div>-->
  
    
    <form action="/chat/create">
    <input type="text" name="content" class="form-control" style="float: left; width: 80%;">
    <input type="submit"  class="btn btn-success" value="입력" style="float: left; width: 20%;">
    </form>
    
     
     
      <form action="/chat/destroy">
     <input type="submit"  class="btn btn-danger btn-xm" style="width:100%;" value="대화 종료">
     </form>



